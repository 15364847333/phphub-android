<resources>

    <style name="ProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal"/>

    <style name="ListProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar" />

    <style name="list_topic_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="list_topic_des">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#C5C5C5</item>
    </style>

    <style name="me_list_items">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A7A7A7</item>
    </style>
    
    <style name="text_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="topic_username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_7b</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="topic_sign">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_9b</item>
    </style>

</resources>
